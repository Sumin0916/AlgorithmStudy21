import sys,heapq
input=sys.stdin.readline
n=int(input())

room=[]

for _ in range(n):
    idx,start,end=map(int,input().split())
    heapq.heappush(room,(start,end,idx))

visited=[False]*(n+1)
cnt=0
time=0
while room:
    s,e,i=heapq.heappop(room)
    if visited[i]==False:
        visited[i]=True
        time=e
        cnt+=1
        for a,b,c in room:
            if visited[c]==False:
                if a>=time:
                    visited[c]=True
                    time=a
    else:
        continue
print(cnt)

#시간 초과 발생


